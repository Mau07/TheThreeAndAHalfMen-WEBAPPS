<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>RailPhilippines - Main</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Icons -->
    <link rel='stylesheet' href='fonts/typicons/typicons.min.css' />
    <link rel="stylesheet" href="fonts/font-awesome/css/font-awesome.min.css">
    <!-- Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Oleo+Script+Swash+Caps:400,700' rel='stylesheet' type='text/css'>
    <!-- Loading Bootstrap -->
    <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Loading Flat UI -->
    <link href="css/flat-ui.css" rel="stylesheet">
    <link href="css/main-custom.css" rel="stylesheet">
    <link rel="shortcut icon" href="images/favicon.ico">
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <nav class="navbar navbar-inverse navbar-embossed navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" data-toggle="collapse" data-target="#mainNavbar" class="navbar-toggle">
                    <span class="sr-only">Toggle Navigation</span>
                </button>
                <a href="#" class="navbar-brand">RailPhilippines</a>
            </div>
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="nav navbar-nav">
                    <li><a href="#"><span class="typcn typcn-chart-area"></span>Crowd History</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a><span class="fui-user"></span> Vhong Navarro</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="settings"><b class="fui-gear"></b> Settings</a>
                        <span class="dropdown-arrow"></span>
                        <ul class="dropdown-menu">
                            <li><a href="#"><span class="fui-user"></span> Account Settings</a></li>
                            <li><a href="#"><span class="fui-new"></span> Contact Us</a></li>
                            <li class="divider"></li>
                            <li><a href="LandingPage.cshtml"><span class="fui-power"></span> Sign Out</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-8"><div class="well"></div></div>
            <div class="col-md-4" id="sidebar">
                <div class="page-header">
                    <h3><span class="typcn typcn-video"></span> Report Station</h3>
                </div>
                <div class="tabbable">
                    <ul id="report-tab" class="nav nav-tabs nav-append-content">
                        <li class="active"><a href="#step1" data-toggle="tab">Step 1</a></li>
                        <li class="disabled"><a href="#step2" data-toggle="">Step 2</a></li>
                        <li class="disabled"><a href="#step3" data-toggle="">Step 3</a></li>
                    </ul> <!-- /tabs -->
                    <div class="tab-content">
                        <div class="tab-pane fade in active" id="step1">
                            <p><strong>Going:</strong></p>
                            <div class="btn-group btn-group-justified" data-toggle="buttons">
                                <label class="btn btn-primary btn-lg">
                                    <input type="radio" name="bound" id="option1"><span class="typcn typcn-arrow-up-thick"></span> North Bound
                                </label>
                                <label class="btn btn-primary btn-lg">
                                    <input type="radio" name="bound" id="option2"><span class="typcn typcn-arrow-down-thick"></span> South Bound
                                </label>
                            </div>
                            <hr>
                            <p><strong>Current Station:</strong></p>
                            <select name="stations" class="select-block mbl">
                                <optgroup label="Stations">
                                    <option value="0">North Avenue</option>
                                    <option value="1">Quezon Avenue</option>
                                    <option value="2">GMA-Kamuning</option>
                                    <option value="3">Cubao</option>
                                    <option value="4">Santolan</option>
                                    <option value="5">Ortigas</option>
                                    <option value="6">Shaw Boulevard</option>
                                    <option value="7">Boni Avenue</option>
                                    <option value="8">Guadalupe</option>
                                    <option value="9">Buendia</option>
                                    <option value="10">Ayala</option>
                                    <option value="11">Magallanes</option>
                                    <option value="12">Taft Avenue</option>
                                </optgroup>
                            </select>
                            <hr>
                            <p><strong>Current Position:</strong></p>
                            <div class="btn-group btn-group-justified" data-toggle="buttons">
                                <label class="btn btn-primary">
                                    <input type="radio" name="position" id="option1"><span class="typcn typcn-map"></span> Stairs
                                </label>
                                <label class="btn btn-primary">
                                    <input type="radio" name="position" id="option2"><span class="typcn typcn-ticket"></span> Ticketing
                                </label>
                                <label class="btn btn-primary">
                                    <input type="radio" name="position" id="option2"><span class="fa fa-road"></span> Platform
                                </label>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-xs-offset-6 col-xs-6">
                                    <button type="button" onclick="return showNext()" class="btn btn-inverse btn-lg btn-block" id="btn-step1">Next <span class="typcn typcn-chevron-right"></span></button>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="step2">
                            <p><strong>Current Condition:</strong></p>
                            <div class="btn-group btn-group-justified" data-toggle="buttons">
                                <label class="btn btn-primary btn-lg">
                                    <input type="radio" name="condition" id="option1">Light
                                </label>
                                <label class="btn btn-warning btn-lg">
                                    <input type="radio" name="condition" id="option2">Moderate
                                </label>
                                <label class="btn btn-danger btn-lg">
                                    <input type="radio" name="condition" id="option2">Heavy
                                </label>
                            </div>
                            <hr>
                            <h6><strong>Would you like to take a photo? <span class="label label-default">Optional</span></strong></h6>
                            <div class="form-group">
                                <div class="fileinput fileinput-new" data-provides="fileinput">
                                    <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                    </div>
                                    <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
                                    <div>
                                        <span class="btn btn-primary btn-embossed btn-file">
                                            <span class="fileinput-new"><span class="fui-image"></span>  Select image</span>
                                            <span class="fileinput-exists"><span class="fui-gear"></span>  Change</span>
                                            <input type="file" name="...">
                                        </span>
                                        <a href="#" class="btn btn-primary btn-embossed fileinput-exists" data-dismiss="fileinput"><span class="fui-trash"></span>  Remove</a>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-xs-6">
                                    <button type="button" onclick="return showPrev()" class="btn btn-inverse btn-lg btn-block"><span class="typcn typcn-chevron-left"></span> Prev</button>
                                </div>
                                <div class="col-xs-6">
                                    <button type="button" onclick="return showNext()" class="btn btn-inverse btn-lg btn-block">Next <span class="typcn typcn-chevron-right"></span></button>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="step3">
                            <form>
                                <div class="form-group">
                                    <h6><strong>How long have you been waiting? <span class="typcn typcn-stopwatch"></span></strong></h6>
                                    <input type="text" class="form-control input-hg" placeholder="In minutes" />
                                </div>
                                <div class="row">
                                    <div class="col-xs-6">
                                        <button type="button" onclick="return showPrev()" class="btn btn-inverse btn-lg btn-block"><span class="typcn typcn-chevron-left"></span> Prev</button>
                                    </div>
                                    <div class="col-xs-6">
                                        <button type="submit" class="btn btn-inverse btn-lg btn-block">Finish <span class="typcn typcn-thumbs-up"></span></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div> <!-- /tab-content -->
                </div>
            </div>
        </div>
    </div>

    <!-- Load JS here for greater good =============================-->
    <script src="js/jquery-1.8.3.min.js"></script>
    <script src="js/jquery-ui-1.10.3.custom.min.js"></script>
    <script src="js/jquery.ui.touch-punch.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/bootstrap-select.js"></script>
    <script src="js/bootstrap-switch.js"></script>
    <script src="js/flatui-checkbox.js"></script>
    <script src="js/flatui-fileinput.js"></script>
    <script src="js/flatui-radio.js"></script>
    <script src="js/jquery.tagsinput.js"></script>
    <script src="js/jquery.placeholder.js"></script>
    <script src="js/main-custom.js"></script>
</body>
</html>
